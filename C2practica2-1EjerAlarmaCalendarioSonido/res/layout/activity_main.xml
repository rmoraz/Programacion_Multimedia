<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/botonSonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/botonAlarma"
        android:layout_marginTop="18dp"
         android:onClick="onClickSonido"
        android:text="@string/textoBotonSonido" />

    <Button
        android:id="@+id/botonCalendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/botonCalendario"
        android:layout_marginTop="19dp"
             android:onClick="onClickCalendario"
        android:text="@string/textoBotonCalendario" />

    <Button
        android:id="@+id/botonAlarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/botonCalendario"
        android:layout_marginTop="18dp"
        android:onClick="onClickAlarma"
        android:text="@string/textoBotonAlarma" />

</RelativeLayout>